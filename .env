# --- Database Configuration ---
DB_USER=postgres
DB_PASSWORD=change_this_password_for_production_please
DB_NAME=inercia_prod

# --- Security Secrets ---
# Generate these using `openssl rand -hex 32` in your terminal
JWT_SECRET=production_jwt_secret_key_change_me_immediately_xyz_789
SESSION_SECRET=production_session_secret_change_me
# Token expiry in formats like '1h', '7d', '3600' (seconds)
JWT_EXPIRY=3600

# --- Domain & Network Configuration ---
# The bare domain names for Nginx routing (no https://)
DOMAIN_NAME=inercia.unibloom.shop
API_DOMAIN_NAME=api.unibloom.shop

# Full URLs for Application Logic
FRONTEND_URL=https://inercia.unibloom.shop
API_EXTERNAL_URL=https://api.unibloom.shop
CALLBACK_URL=https://inercia.unibloom.shop/api/auth/google/callback

# --- CORS Security ---
# Comma-separated list of allowed origins. 
# Supports specific domains. Logic in backend will handle stripping trailing slashes/wildcards.
ALLOWED_ORIGINS=https://imaginarium.unibloom.shop,http://localhost:3000,https://entrar.unibloom.shop

# --- Application Config ---
PORT=3000
NODE_ENV=production

# --- OAuth (Optional initially, but required for Google Login) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
